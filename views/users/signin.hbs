<div class="container user-form py-5" style="margin-top: 50px;">

<span class="site-logo my-3"><h1>FlauntIt</h1></span>
<p class="lead my-1">Join the community now and share your collections.

<div class="row">
    <div class="col-12">
        <h1>Sign In</h1>
        {{# if hasErrors}}
            <div class="alert alert-danger">
                {{# each messages }}
                    <p>{{this}}</p>
                {{/each}}
            </div>
        {{/if}}
        <form action="/users/signin" method="POST" onsubmit="return Validate()">
            <div class="form-group">
                <input type="text" id="email" name="email" class="form-control" placeholder="E-mail" required="required" title="For e.g.:'abc@gmail.com'" aria-required="true" pattern="^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$">
            </div>
            <div class="form-group">
                <input type="password" id="password" name="password" class="form-control" placeholder="Password" required="required" title="Enter your password." size="15" aria-required="true">
            </div>
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">
            <button type="submit" class="btn btn-primary">Sign In</button>
        </form>
        <p>Don't have an account? <a href="/users/signup">Sign Up</a></p>
    </div>
</div>

</div>