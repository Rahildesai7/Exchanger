<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/ekko-lightbox/5.3.0/ekko-lightbox.css">


<div class="container" style=" z-index:-1; overflow:hidden;">
{{# each posts}}
	<div class="row" style=" margin-right: auto;margin-left: auto; padding-left:15px;">
		{{# each this}}
		<div class="col-12 col-md-6 col-lg-4">
		<div class="card" style="max-width:400px; height:600px;">
			<br>
			<span name="pusername" id="username">{{this.username}}</span>
			<param value="/{{this.userid}}"></param>
			<span name="postid" class="hidden">{{this.postid}}</span>
			<br>
			<a href="/image/{{ this.image }}" data-toggle="lightbox">
			<img class="card-img-top" src="/image/{{ this.image }}" width="400" height="370" id="img">
			</a>
			<!--<div class="card-body fluid">-->
				<div class="post_details">
					<form action="/likes/{{this.postid}}" method="POST" style="display:inline;">
						<!--<span><button class="lkbtn" type="submit" align="center">‚ù§</button></span>-->
						<span id = heart><button class="lkbtn" type="submit" align="center" style="display:inline; margin:5px; font-size:20px;"><i class="fa fa-heart-o" aria-hidden="true" style="display:inline;"></i></button> </span>
						<span id="here" style:"font-size:20px;">{{this.likes}}</span>
					</form>
					<form action="/requests/{{this.postid}}" method="POST" style="display:inline;">
						<span style="display:inline;"><button class="btn" style="color:white; background-color: #00203FFF; display:inline;	text-align: center; text-decoration: none; margin:5px; width:80px; padding: 3px; float:right;">Request</button></span>
					</form>
			</div>
			<div>
				<h5>{{ this.title }}</h5>
			</div>
			<div class="des">
				<p>{{ this.description }}</p>
			</div>
		</div>
		</div>
		{{/each}}
	
	</div>
	{{/each}}
</div>


